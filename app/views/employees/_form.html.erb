<%= form_with model: user, url: employee_path(user), method: :put do |f| %>
  <div class="tile">
    <div class="tile-body">
      <%= f.fields_for :profile do |pf| %>
        <form class="form-horizontal">
          <div class="form-group row">
            <label class="control-label col-md-3"><%= t('ui.title') -%></label>
            <div class="col-md-8">
              <%= pf.text_field :title, class: 'form-control', placeholder: t('ui.title_placeholder') %>
            </div>
          </div>
        </form>
      <% end %>
    </div>
    <div class="tile-footer">
      <div class="row">
        <div class="col-md-8 col-md-offset-3">
          <button class="btn btn-primary" type="submit">
            <i class="fa fa-fw fa-lg fa-check-circle"></i><%= t('ui.update') -%>
          </button>
        </div>
      </div>
    </div>
  </div>
<% end %>

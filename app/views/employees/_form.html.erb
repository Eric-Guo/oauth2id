<%= form_with model: user, url: employee_path(user), method: :put do |f| %>
  <div class="tile">
    <div class="tile-body">
      <form class="form-horizontal">
        <div class="form-group row">
          <label class="control-label col-md-3"><%= t('ui.title') -%></label>
          <div class="col-md-8">
            <%= f.text_field :username, class: 'form-control', placeholder: t('ui.title_placeholder') %>
          </div>
        </div>
      </form>
    </div>
    <div class="tile-footer">
      <div class="row">
        <div class="col-md-8 col-md-offset-3">
          <button class="btn btn-primary" type="submit">
            <i class="fa fa-fw fa-lg fa-check-circle"></i><%= t('ui.update') -%>
          </button>
        </div>
      </div>
    </div>
  </div>
<% end %>

<div class="col-md-6 col-lg-4">
  <div class="widget-small <%= application.div_class -%> coloured-icon">
    <i class="icon fa <%= application.icon -%> fa-3x"></i>
    <div class="info">
      <% if application.login_url.present? %>
        <%= link_to application.login_url, target: '_blank' do %>
          <h4><%= application.name -%></h4>
        <% end %>
      <% else %>
        <%= link_to oauth_authorization_path(client_id: application.uid, redirect_uri: application.redirect_uri.split[0], response_type: 'code', scope: application.scopes), target: '_blank' do %>
          <h4><%= application.name -%></h4>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
